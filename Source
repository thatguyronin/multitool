@echo off
color 0A
setlocal enabledelayedexpansion

:menu
cls
echo RONIN CLIENT ON TOP(MADE BY THATGUIYRONIN)
echo.
echo 1. Discord Webhook Spammer
echo 2. Discord Profile Info Grabber
echo 3. Exit
echo.
set /p choice=Choose an option:

if "%choice%"=="1" goto spammer
if "%choice%"=="2" goto grabber
if "%choice%"=="3" goto exit
echo Invalid option. Please choose a valid option.
pause
goto menu

:spammer
cls
set /p webhook_url=Enter Discord Webhook URL:
set "jsonData={\"content\":\"@everyone RONIN CLIENT ON TOP\"}"

:spam
curl -X POST -H "Content-Type: application/json" -d "%jsonData%" "%webhook_url%"
curl -X POST -H "Content-Type: application/json" -d "%jsonData%" "%webhook_url%"
curl -X POST -H "Content-Type: application/json" -d "%jsonData%" "%webhook_url%"
curl -X POST -H "Content-Type: application/json" -d "%jsonData%" "%webhook_url%"
timeout /t 0 >nul
goto spam

:grabber
cls
set /p discord_id=Enter Discord User ID:
set /p bot_token=Enter your Discord Bot Token:
set "api_url=https://discord.com/api/v9/users/%discord_id%"

REM Fetch user information using PowerShell for better JSON handling
powershell -Command "$response = Invoke-RestMethod -Uri '%api_url%' -Headers @{'Authorization' = 'Bot %bot_token%'}; $response | ConvertTo-Json -Compress | Out-File -Encoding utf8 'user_info.json'"

REM Read the JSON file and parse it
for /f "tokens=* delims=" %%i in (user_info.json) do set "user_info=%%i"

REM Extract specific fields using PowerShell
for /f "tokens=2 delims=:" %%i in ("%user_info%") do set "username=%%i"
for /f "tokens=2 delims=:" %%i in ("%user_info%") do set "discriminator=%%i"
for /f "tokens=2 delims=:" %%i in ("%user_info%") do set "about_me=%%i"
for /f "tokens=2 delims=:" %%i in ("%user_info%") do set "creation_date=%%i"

REM Display user information
echo User Information:
echo Username: %username%
echo Discriminator: %discriminator%
echo About Me: %about_me%
echo Creation Date: %creation_date%

pause
goto menu

:exit
echo Exiting RONIN CLIENT.
pause
exit
